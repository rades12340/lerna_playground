{
  "name": "@ds.e/scss",
  "version": "2.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "normalize-scss": "^7.0.1"
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lint-staged": "^11.2.3",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.14",
    "pinst": "^2.1.6",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-prettier": "^1.1.2"
  },
  "scripts": {
    "lint": "stylelint ./**/*.scss",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "build": "node src/scripts/build.js",
    "dev": "nodemon --watch src --exec yarn build -e scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "yarn lint:fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
